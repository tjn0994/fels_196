<h2> Activities </h2>
<% @activities.each do |activity| %>
  <div class="row activity_user">
    <div class="col-md-2">
      <% if activity.user.avatar? %>
        <%= image_tag activity.user.avatar, size: Settings.size_user_index %>
      <% else %>
        <%= gravatar_for activity.user, size: Settings.size_user_index %>
      <% end %>
    </div>
    <div class="col-md-9">
      <h4> <%= activity.target_action %> </h4>
     <i> <%= activity.created_at %> </i>
    </div>
  </div>
<% end %>
